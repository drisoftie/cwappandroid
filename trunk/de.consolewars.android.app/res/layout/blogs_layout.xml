<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		android:id="@+id/blogs_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/blogs_bttn_refresh"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/refresh_bump"/>
		<Button
			android:id="@+id/blogs_bttn_new_blog"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/blogs_bttn_refresh"
			android:background="@drawable/def_bttn_new_mssg"/>
		<Spinner
			android:id="@+id/blogs_filter_spinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/blogs_bttn_new_blog"
			android:prompt="@string/blogs_filter"/>
	</RelativeLayout>
	<de.consolewars.android.app.view.ScrollDetectorScrollView
		android:id="@+id/blogs_scroll_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TableLayout
			android:id="@+id/blogs_table"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="3dip"/>
	</de.consolewars.android.app.view.ScrollDetectorScrollView>
</LinearLayout>