<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/cmnt_cell_bg">
	<RelativeLayout
		android:id="@+id/cmts_cell_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/comments_cell_margin"
		android:layout_marginRight="@dimen/comments_cell_margin"
		android:background="@drawable/def_cmnt_body_selector">
		<RelativeLayout
			android:id="@+id/cmts_bttn_header_layout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/cmts_usericon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_marginTop="@dimen/blogs_row_icon_padding_top"
				android:layout_marginLeft="@dimen/blogs_row_icon_padding_left"
				android:layout_marginBottom="2dp"/>
			<TextView
				android:id="@+id/cmts_username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/blogs_row_title_padding"
				android:layout_toRightOf="@id/cmts_usericon"
				android:layout_centerVertical="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:textColor="@color/blogs_table_text_title"/>
			<TextView
				android:id="@+id/cmts_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_margin="@dimen/blogs_row_title_padding"
				android:layout_centerVertical="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:textColor="@color/blogs_table_text_title"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/comment_content_layout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/cmts_bttn_header_layout"
			android:layout_marginLeft="@dimen/comments_cell_margin"
			android:layout_marginRight="@dimen/comments_cell_margin"
			android:layout_marginTop="10dp"
			android:background="@drawable/table_cell_bg">
			<TextView
				android:id="@+id/comment_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/blogs_row_author_margin"
				android:minLines="3"
				android:textColor="@color/blogs_table_text_title"/>
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>