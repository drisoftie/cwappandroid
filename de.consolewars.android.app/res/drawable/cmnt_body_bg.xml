<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<padding
				android:left="1dp"
				android:top="1dp"
				android:right="1dp"
				android:bottom="1dp"/>
			<solid android:color="#FF000000"/>
			<corners android:radius="3dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<padding
				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp"/>
			<gradient
				android:angle="270"
				android:startColor="@color/comments_cell_inner_bg_up"
				android:centerColor="@color/comments_cell_inner_bg_center"
				android:endColor="@color/comments_cell_inner_bg_down"/>
		</shape>
	</item>
</layer-list>