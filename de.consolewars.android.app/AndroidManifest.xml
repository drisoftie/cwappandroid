		<activity android:name=".tab.board.BoardActivityGroup" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.board.BoardActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.blogs.BlogsWriterActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.news.NewsFragmentActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.blogs.BlogsFragmentActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.news.SingleNewsFragmentActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.blogs.SingleBlogFragmentActivity" android:launchMode="singleTop"></activity>
		<activity android:name=".tab.overview.OverviewFragmentActivity" android:launchMode="singleTop"></activity>



	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="6" android:targetSdkVersion="13"/>
</manifest>