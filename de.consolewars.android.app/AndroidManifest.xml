		<activity android:configChanges="keyboardHidden|orientation"
			android:icon="@drawable/cw_logo" android:name=".SplashScreenActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".tab.CwNavigationMainTabActivity"
			android:theme="@android:style/Theme.NoTitleBar" android:launchMode="singleTop"/>
		<activity android:name=".tab.msgs.MessagesActivityGroup"
			android:launchMode="singleTop"/>
