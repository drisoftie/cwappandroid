<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
	android:versionName="1.0"
	package="de.consolewars.android.app">
	<application
		android:debuggable="true"
		android:persistent="false"
		android:icon="@drawable/cw_logo"
		android:theme="@style/CheckTheme"
		android:label="@string/app_name">
		<activity
			android:icon="@drawable/cw_logo"
			android:name=".SplashScreenActivity"
			android:theme="@style/CheckTheme">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN"/>
				<category
					android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".tab.CwNavigationMainTabActivity"
			android:configChanges="keyboardHidden|orientation"
			android:theme="@style/CheckTheme"></activity>
		<activity
			android:name=".tab.news.NewsActivityGroup"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.news.NewsActivity"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.blogs.BlogsActivityGroup"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.blogs.BlogsActivity"></activity>
		<activity
			android:name=".tab.msgs.MessagesActivityGroup"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.msgs.MessagesActivity"></activity>
		<activity
			android:name=".tab.shout.ShoutboxActivity"></activity>
		<activity
			android:name=".tab.shout.ShoutboxActivityGroup"></activity>
		<activity
			android:name=".tab.blogs.SingleBlogActivity"
			android:alwaysRetainTaskState="false"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.msgs.SingleMessageActivity"
			android:alwaysRetainTaskState="false"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.news.SingleNewsActivity"
			android:alwaysRetainTaskState="false"
			android:configChanges="orientation"></activity>
		<activity
			android:name=".tab.overview.OverviewActivity"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.shout.ShoutboxActivityGroup"></activity>
		<activity
			android:name=".tab.overview.OverviewActivityGroup"
			android:alwaysRetainTaskState="false"
			android:configChanges="keyboardHidden|orientation"></activity>
		<activity
			android:name=".tab.news.NewsPicViewerActivity"></activity>
		<activity
			android:name=".tab.cmts.CommentsActivity"
			android:alwaysRetainTaskState="false"></activity>



	</application>
	<uses-permission
		android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk
		android:minSdkVersion="6"
		android:targetSdkVersion="8"></uses-sdk>
</manifest> 